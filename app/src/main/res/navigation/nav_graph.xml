<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.android.movieapplication.ui.moviedetail.MovieDetailFragment"
        tools:layout="@layout/movie_detail_fragment">
        <argument
            android:name="movieId"
            app:argType="long" />
        <action
            android:id="@+id/action_movieDetailFragment_to_peopleDetailFragment"
            app:destination="@id/peopleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.android.movieapplication.ui.ViewPagerFragment"
        android:label="MovieApplication"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_filterFragment"
            app:destination="@id/filterFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/filterFragment"
        android:name="com.example.android.movieapplication.ui.custommovies.filter.FilterFragment"
        android:label="FilterFragment" />
    <fragment
        android:id="@+id/peopleDetailFragment"
        android:name="com.example.android.movieapplication.ui.people.PeopleDetailFragment"
        android:label="PeopleDetailFragment" >
        <argument
            android:name="personId"
            app:argType="long" />
        <action
            android:id="@+id/action_peopleDetailFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.android.movieapplication.ui.custommovies.search.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_searchFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
</navigation>