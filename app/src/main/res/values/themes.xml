<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApplication"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_700</item>
        <item name="colorPrimaryVariant">@color/black_500</item>
        <item name="colorOnPrimary">@color/black_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_orange_a100</item>
        <item name="colorSecondaryVariant">@color/deep_orange_a200</item>
        <item name="colorOnSecondary">@color/black_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/black_900</item>
        <item name="colorAccent">@color/deep_orange_a200</item>
        <item name="colorPrimary">@color/black_700</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/black_400</item>
    </style>

    <style name="AppTheme.ChipGroupFilter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIconTint">@color/deep_orange_a200</item>
        <item name="android:textColor">@color/chip_state_list</item>
    </style>

    <style name="AppTheme_Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>